<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="12"
>
	<Button
		android:id="@+id/btn_audio_pitch_startstop"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:layout_weight="6"
	    android:text="@string/audio_start_pitch"
    />
    
	
</LinearLayout>

	<Button
		android:id="@+id/btn_audio_stopall"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:text="@string/audio_stop_clapper"	  
    />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="12"
>

</LinearLayout>
<TextView 
		android:id="@+id/tv_recording_status"
        android:text="@string/audio_status_stopped"
	    android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"/>
<TextView
		android:id="@+id/tv_magnitude_label"
        android:text="@string/audio_log"
	    android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"/> 

<ScrollView
		android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
		>
<TextView 
		android:id="@+id/tv_resultlog"
        android:text=""
	    android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
    	android:textColor="@android:color/black"/>
</ScrollView>

<!-- line separator -->
</LinearLayout>
